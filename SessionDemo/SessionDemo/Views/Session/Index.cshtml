@{
    ViewBag.Title = "Login";
}

<h2>Login Page</h2>

<form method="post">
    <label>Enter your name:</label><br />
    <input type="text" name="name" class="form-control" required />
    <br />
    <button type="submit" class="btn btn-primary">Login</button>
</form>

@if (ViewBag.Message != null)
{
    <p style="color:red">@ViewBag.Message</p>
}
